pipeline {
    agent any 
    
    tools {
        nodejs 'node21'
        dockerTool 'docker'
    }

    environment {
        SONAR_HOME = tool name: 'sonarqube'
    }

    stages {
        stage('GitHub Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Namrathaaaaaa/devsecops-tic-tac-toe.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') { 
                    sh """
                        ${SONAR_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=tic-tac-toe \
                        -Dsonar.projectName='tic-tac-toe-proj' \
                    """
                }
            }
        }
        stage('Docker image pull'){
            steps{
                withDockerRegistry(credentialsId: 'docker-creds', url: 'https://index.docker.io/v1/') {
                    sh "docker pull namratha3/tic-tac-toe:latest"
                }
            }
        }
        stage('Docker build and run'){
            steps{
                sh 'docker build -t namratha3/tic-tac-toe:latest .'
                sh 'docker run -d -p 8000:80 namratha3/tic-tac-toe:latest'
            }
        }
    }
}
